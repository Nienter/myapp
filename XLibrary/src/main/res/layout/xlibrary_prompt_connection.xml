<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="50dp" >

    <RelativeLayout
        android:id="@+id/viewNormal"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_prompt_connection"
        android:paddingBottom="8dp" >

        <ImageView
            android:id="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/animlist_prompt_connection"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="8dp"
            android:shadowColor="#ff102700"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:text="@string/popup_connect_disconnect"
            android:textColor="#fffffe8c"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/textView"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:shadowColor="#ff102700"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:text="@string/popup_connect_will_connect"
            android:textColor="#fffffe8c"
            android:textSize="13sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/viewConnecting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_prompt_connection"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="8dp" >

        <ProgressBar
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:indeterminate="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/popup_connect_connecting"
            android:textColor="#ffffffff"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>